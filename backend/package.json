{
  "name": "backend",
  "version": "1.0.0",
  "description": "kis-academics",
  "engines": {
    "node": "18.x"
  },
  "main": "index.js",
  "scripts": {
    "start": "npx ts-node src/index.ts",
    "start:dev": "nodemon",
    "start:prod": "npx ts-node -T src/index.ts",
    "db:make-migrate": "npx knex migrate:make -x ts",
    "db:migrate": "npx knex migrate:latest",
    "db:up": "npx knex migrate:up",
    "db:down": "npx knex migrate:down",
    "db:seed": "npx knex seed:run",
    "prettier-fix": "npx prettier --write  src test",
    "setup": "cp .env.example .env && chmod +x ./scripts/setup_db.sh && ./scripts/setup_db.sh && npm run db:seed"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {}
  },
  "eslintIgnore": [
    "node_modules"
  ],
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 90,
    "proseWrap": "always"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node src/index.ts"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [],
    "reporter": [
      "text",
      "text-summary",
      "html",
      "lcovonly"
    ],
    "cache": true,
    "all": true,
    "report-dir": "./coverage"
  },
  "keywords": [
    "finance"
  ],
  "author": "rushidhanwant",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.574.0",
    "@faker-js/faker": "^8.0.0",
    "@hapi/hapi": "^21.3.9",
    "@hapi/inert": "7.0.0",
    "@hapi/vision": "7.0.0",
    "bcrypt": "^5.1.1",
    "dotenv": "16.0.1",
    "hapi-auth-jwt2": "^10.2.0",
    "hapi-swagger": "^17.2.1",
    "joi": "17.6.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "moment": "^2.30.1",
    "pg": "8.7.3",
    "pg-connection-string": "2.5.0",
    "ramda": "0.28.0",
    "slugify": "^1.6.6",
    "ts-node": "10.9.1",
    "typedoc": "^0.23.10",
    "typescript": "4.7.4",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "4.3.1",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "9.1.1",
    "@types/ramda": "0.28.15",
    "chai": "4.3.6",
    "eslint": "^8.57.0",
    "form-data": "^4.0.0",
    "mocha": "10.0.0",
    "nodemon": "^3.1.0",
    "nyc": "^15.1.0",
    "typescript-eslint": "^7.7.1"
  }
}
